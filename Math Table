    private void tableSelActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int selectedItem = tableSel.getSelectedIndex();

        if (selectedItem == 0) {
            
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "1 x " + i + " = " + 1 * i + "\n");
            } 
            
        } else if (selectedItem == 1) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "2 x " + i + " = " + 2 * i + "\n");
            }
        } else if (selectedItem == 2) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "3 x " + i + " = " + 3 * i + "\n");
            }
        } else if (selectedItem == 3) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "4 x " + i + " = " + 4 * i + "\n");
            }                       
        } else if (selectedItem == 4) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "5 x " + i + " = " + 5 * i + "\n");
            }
        } else if (selectedItem == 5) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "6 x " + i + " = " + 6 * i + "\n");
            }
        } else if (selectedItem == 6) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "7 x " + i + " = " + 7 * i + "\n");
            }
        } else if (selectedItem == 7) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "8 x " + i + " = " + 8 * i + "\n");
            }
        } else if (selectedItem == 8) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "9 x " + i + " = " + 9 * i + "\n");
            }
        } else if (selectedItem==9) {
            textArea.setText("");
            for (int i = 1; i < 11; i++) {
                textArea.setText(textArea.getText() + "10 x " + i + " = " + 10 * i + "\n");
            }
        }
    }                                        

